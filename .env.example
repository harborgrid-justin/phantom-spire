# Environment Configuration
NODE_ENV=development
PORT=3000

# Application Configuration
SETUP_MODE=true
FIRST_RUN=true
ADMIN_SETUP_TOKEN=phantom_admin_setup_token_change_in_production

# Database Configuration - MongoDB (Primary document store)
MONGODB_URI=mongodb://admin:phantom_secure_pass@localhost:27017/phantom-spire?authSource=admin

# Database Configuration - PostgreSQL (Structured threat intelligence)
POSTGRESQL_URI=postgresql://postgres:phantom_secure_pass@localhost:5432/phantom_spire

# Database Configuration - MySQL (Analytics and reporting)
MYSQL_URI=mysql://phantom_user:phantom_secure_pass@localhost:3306/phantom_spire

# Redis Configuration (Caching, sessions, and message queuing)
REDIS_URL=redis://:phantom_redis_pass@localhost:6379/0

# Database Connection Pools
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random-256-bit-minimum
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this-in-production
SESSION_MAX_AGE=86400000

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_MAX_SIZE=100m
LOG_MAX_FILES=14
LOG_DATE_PATTERN=YYYY-MM-DD

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS_STATUS=true

# Security Configuration
BCRYPT_ROUNDS=12
HELMET_ENABLED=true
TRUST_PROXY=true

# Data Layer Configuration
DATA_RETENTION_DAYS=365
EVIDENCE_RETENTION_DAYS=2555
THREAT_FEED_REFRESH_INTERVAL=3600
MAX_CONCURRENT_WORKFLOWS=10

# External Integrations
MISP_URL=
MISP_AUTH_KEY=
OTX_API_KEY=
VIRUSTOTAL_API_KEY=

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=60000
METRICS_ENABLED=true
METRICS_PORT=9090

# File Upload Configuration
UPLOAD_MAX_SIZE=100mb
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,txt,csv,json,xml
UPLOAD_PATH=/app/uploads

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups

# Feature Flags
ENABLE_SWAGGER_DOCS=true
ENABLE_SETUP_GUI=true
ENABLE_DEMO_MODE=false
ENABLE_DEBUG_ROUTES=false