{
  "name": "phantom-spire",
  "version": "1.0.0",
  "description": "Enterprise-grade Cyber Threat Intelligence Platform",
  "type": "module",
  "main": "dist/index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:native && tsc",
    "build:native": "cargo build --release && napi build --platform --release",
    "build:native:debug": "cargo build && napi build --platform",
    "copy:static": "node scripts/copy-static.js",
    "start": "node dist/index.js",
    "dev": "npm run build && npm start",
    "dev:simple": "tsc src/simple-server.ts --outDir dist --target ES2020 --module ESNext --moduleResolution bundler && node dist/simple-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:native": "npm run build:native:debug && npm test",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "demo:enterprise": "node .development/demos/run-enterprise-demo.js",
    "demo:fortune100": "node .development/demos/run-fortune100-demo.js",
    "docker:build": "docker build -t phantom-spire .",
    "docker:run": "docker run -p 3000:3000 phantom-spire",
    "setup:databases": "docker-compose up -d postgres mysql mongo redis",
    "setup:full": "docker-compose up -d",
    "setup:reset": "docker-compose down -v && docker-compose up -d",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "health:check": "curl http://localhost:3000/health || echo 'Service not available'",
    "logs:app": "docker-compose logs -f app",
    "logs:databases": "docker-compose logs -f mongo postgres mysql redis",
    "evaluate:installation": "node dist/scripts/evaluate-installation.js",
    "evaluate:installation:json": "npm run evaluate:installation -- --format json",
    "evaluate:installation:report": "npm run evaluate:installation -- --detailed --output installation-evaluation-report.md --format markdown",
    "analyze:system": "node dist/scripts/analyze-system.js",
    "analyze:system:report": "npm run analyze:system -- --report comprehensive-system-analysis.md",
    "benchmark:native": "node -e \"const { nativeXDRService } = require('./dist/native-modules/NativeXDRIntegrationService.js'); nativeXDRService.benchmarkPerformance().then(console.log)\"",
    "packages:install": "npm install --workspaces",
    "packages:build": "npm run build --workspaces",
    "packages:test": "npm run test --workspaces",
    "packages:lint": "npm run lint --workspaces",
    "packages:clean": "npm run clean --workspaces",
    "demo:cross-plugin-integration": "tsc src/examples/cross-plugin-integration-demo.ts --outDir dist --target ES2020 --module ESNext --moduleResolution bundler && node dist/examples/cross-plugin-integration-demo.js"
  },
  "keywords": [
    "threat-intelligence",
    "cybersecurity",
    "ioc",
    "security",
    "enterprise",
    "api",
    "cti",
    "misp",
    "stix",
    "multi-database"
  ],
  "author": "Phantom Spire Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^9.1.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/lab": "^6.0.0-beta.11",
    "@mui/x-data-grid": "^8.11.0",
    "@mui/x-tree-view": "^8.11.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "events": "^3.3.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "mysql2": "^3.14.4",
    "pg": "^8.16.3",
    "react-router-dom": "^7.8.2",
    "recharts": "^3.1.2",
    "redis": "^5.8.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@elastic/elasticsearch": "^9.1.1",
    "@eslint/js": "^9.34.0",
    "@mui/icons-material": "^6.1.0",
    "@mui/material": "^6.1.0",
    "@napi-rs/cli": "^3.1.5",
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/events": "^3.0.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jest": "^30.1.1",
    "prettier": "^3.6.2",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "napi": {
    "binaryName": "phantom-xdr-native",
    "targets": [
      "x86_64-pc-windows-msvc",
      "x86_64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "aarch64-apple-darwin",
      "aarch64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl"
    ]
  }
}
