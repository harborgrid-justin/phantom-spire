{
  "name": "phantom-spire",
  "version": "1.0.0",
  "description": "Enterprise-grade Cyber Threat Intelligence Platform",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy:static",
    "copy:static": "node scripts/copy-static.js",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "demo:enterprise": "node .development/demos/run-enterprise-demo.js",
    "demo:fortune100": "node .development/demos/run-fortune100-demo.js",
    "docker:build": "docker build -t phantom-spire .",
    "docker:run": "docker run -p 3000:3000 phantom-spire",
    "setup:databases": "docker-compose up -d postgres mysql mongo redis",
    "setup:full": "docker-compose up -d",
    "setup:reset": "docker-compose down -v && docker-compose up -d",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "health:check": "curl http://localhost:3000/health || echo 'Service not available'",
    "logs:app": "docker-compose logs -f app",
    "logs:databases": "docker-compose logs -f mongo postgres mysql redis",
    "evaluate:installation": "node dist/scripts/evaluate-installation.js",
    "evaluate:installation:json": "npm run evaluate:installation -- --format json",
    "evaluate:installation:report": "npm run evaluate:installation -- --detailed --output installation-evaluation-report.md --format markdown",
    "analyze:system": "node dist/scripts/analyze-system.js",
    "analyze:system:report": "npm run analyze:system -- --report comprehensive-system-analysis.md"
  },
  "keywords": [
    "threat-intelligence",
    "cybersecurity",
    "ioc",
    "security",
    "enterprise",
    "api",
    "cti",
    "misp",
    "stix",
    "multi-database"
  ],
  "author": "Phantom Spire Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "mysql2": "^3.14.4",
    "pg": "^8.16.3",
    "redis": "^5.8.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@mui/icons-material": "^6.1.0",
    "@mui/material": "^6.1.0",
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jest": "^30.1.1",
    "prettier": "^3.6.2",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
