{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "downlevelIteration": true,
    "allowImportingTsExtensions": false,
    "composite": true,
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["frontend/components/*"],
      "@/types/*": ["frontend/types/*"],
      "@/context/*": ["frontend/context/*"],
      "@/views/*": ["frontend/views/*"],
      "@/services/*": ["services/*"],
      "@phantom-spire/*": ["../packages/*/src"],
      "@phantom-spire/ml-core": ["packages/phantom-ml-core/nextgen"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "references": [
    { "path": "./packages/phantom-attribution-core" },
    { "path": "./packages/phantom-compliance-core" },
    { "path": "./packages/phantom-crypto-core" },
    { "path": "./packages/phantom-cve-core" },
    { "path": "./packages/phantom-feeds-core" },
    { "path": "./packages/phantom-forensics-core" },
    { "path": "./packages/phantom-hunting-core" },
    { "path": "./packages/phantom-incident-response-core" },
    { "path": "./packages/phantom-intel-core" },
    { "path": "./packages/phantom-ioc-core" },
    { "path": "./packages/phantom-malware-core" },
    { "path": "./packages/phantom-mitre-core" },
    { "path": "./packages/phantom-ml-core" },
    { "path": "./packages/phantom-ml-studio" },
    { "path": "./packages/phantom-reputation-core" },
    { "path": "./packages/phantom-risk-core" },
    { "path": "./packages/phantom-sandbox-core" },
    { "path": "./packages/phantom-secop-core" },
    { "path": "./packages/phantom-threat-actor-core" },
    { "path": "./packages/phantom-vulnerability-core" },
    { "path": "./packages/phantom-xdr-core" }
  ]
}
