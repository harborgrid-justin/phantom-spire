# MySQL configuration for Phantom Spire CTI Platform
# Optimized for threat intelligence data processing

[mysqld]
# Basic settings
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
port = 3306
datadir = /var/lib/mysql

# Character set and collation
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# Storage engine
default-storage-engine = InnoDB

# Memory settings optimized for CTI workloads
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2

# Connection settings
max_connections = 200
max_connect_errors = 100
wait_timeout = 600
interactive_timeout = 600

# Query cache (disabled in MySQL 8.0+)
# query_cache_type = 1
# query_cache_size = 32M

# Logging
log-error = /var/log/mysql/error.log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Binary logging for replication
server-id = 1
log-bin = mysql-bin
binlog_format = ROW
expire_logs_days = 7

# Performance tuning for analytics workloads
tmp_table_size = 64M
max_heap_table_size = 64M
sort_buffer_size = 2M
read_buffer_size = 1M
read_rnd_buffer_size = 4M
join_buffer_size = 2M

# InnoDB settings for large datasets
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT
innodb_doublewrite = 1
innodb_stats_on_metadata = 0

# Security settings
local_infile = 0
symbolic-links = 0

[mysql]
default-character-set = utf8mb4

[mysqldump]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4