{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src-ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@phantom-spire/ml-core": ["../phantom-ml-core/nextgen"]
    }
  },
  "include": ["src-ts/**/*"],
  "exclude": ["node_modules", "dist", "src"]
}
