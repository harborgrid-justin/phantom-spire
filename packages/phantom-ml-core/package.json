{
  "name": "@phantom-spire/ml-core",
  "version": "1.0.1",
  "description": "Enterprise machine learning services for threat detection and security analytics - Part of the Phantom Spire CTI Platform",
  "main": "ml-core.js",
  "types": "ml-core.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/harborgrid-justin/phantom-spire.git",
    "directory": "packages/phantom-ml-core"
  },
  "keywords": [
    "@phantom-spire",
    "enterprise-cti",
    "machine-learning",
    "cybersecurity",
    "threat-detection",
    "anomaly-detection",
    "napi-rs",
    "rust",
    "enterprise",
    "security-analytics"
  ],
  "author": "Phantom Spire Security Team",
  "license": "MIT",
  "files": [
    "index.js",
    "*.node"
  ],
  "napi": {
    "binaryName": "phantom-ml-core",
    "targets": [
      "x86_64-pc-windows-msvc"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "clean": "rimraf target *.node",
    "test:napi": "node -e \"const { PhantomMLCore } = require('./'); console.log('âœ… NAPI module loaded successfully');\"",
    "test": "npm run build && npm run test:napi"
  },

  "devDependencies": {
    "@napi-rs/cli": "^3.2.0",
    "rimraf": "^6.0.1",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "c8": "^8.0.0"
  },
  "c8": {
    "reporter": ["text", "lcov", "html"],
    "exclude": ["node_modules/**", "target/**", "dist/**", "*.d.ts"]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "organization": {
    "name": "Phantom Spire",
    "url": "https://github.com/harborgrid-justin/phantom-spire"
  }
}
