{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "removeComments": false,
    "importHelpers": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["components/*"],
      "@/features/*": ["features/*"],
      "@/types/*": ["types/*"],
      "@/lib/*": ["lib/*"],
      "@/utils/*": ["utils/*"],
      "@/hooks/*": ["hooks/*"],
      "@/middleware/*": ["middleware/*"],
      "@/testing/*": ["testing/*"],
      "@/shared/*": ["shared/*"],
      "@/config/*": ["config/*"],
      "@/theme/*": ["theme/*"],
      "@/security/*": ["security/*"],
      "@/services/*": ["services/*"],
      "@/api/*": ["lib/api/*"],
      "@/models/*": ["lib/models/*"],
      "@/monitoring/*": ["lib/monitoring/*"],
      "@/analytics/*": ["lib/analytics/*"],
      "@/caching/*": ["lib/caching/*"],
      "@/core/*": ["lib/core/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "build",
    "dist",
    "cypress",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
